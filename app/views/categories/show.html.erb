<div class="wrapper">
  <% @articles.each do |article| %>
    <div class="article-container d-inline-block w-50 m-0 p-0">
      <div class="article">
        <div class="square"></div>
        <div class="square p-3">
          <h2 class="name d-inline-block">
            <%= @category.name %>
          </h2>
          <h3 class="article-title">
            <%= article.title %>
          </h3>
          <%= simple_format(truncate(article.text, length: 400, separator: "\n")) %>
          <%= link_to('Read More', article_path) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

