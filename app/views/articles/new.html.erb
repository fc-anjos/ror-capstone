<h2>Log in</h2>

<div class="container main">
  <%= form_for :article, url: articles_path do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, autocomplete: "Title" %>
    </div>

    <div class="field">
      <%= f.label :image %><br />
      <%= f.text_field :image, autocomplete: "image" %>
    </div>


      <% Category.all.each do |category| %>
       <%= check_box_tag "categories[]", category.id %>
       <%= category.name %>
      <% end %>


    <div class="field">
      <%= f.label :text %><br />
      <%= f.text_area :text, autocomplete: "Text" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Article" %>
    </div>

  </div>
<% end %>
